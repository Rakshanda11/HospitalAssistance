{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "declaration": true
  },
  "files": [
    "src/index.tsx"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "lib", "build", "dist"]
}